<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="windowContainer" alignment="CENTER" maxWidth="600.0" prefHeight="575.0" prefWidth="650.0" spacing="8.0" stylesheets="@../css/stylesheet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER" maxHeight="275.0" maxWidth="565.0" styleClass="itemContainer">
            <children>
                <ImageView fitHeight="270.0" fitWidth="560.0" pickOnBounds="true">
                    <image>
                        <Image url="@../images/backgroundSpeedLimit.png" />
                    </image>
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </HBox.margin>
                </ImageView>
            </children>
        </HBox>
        <VBox spacing="4.0" VBox.vgrow="ALWAYS">
            <children>
                <Label styleClass="h1" text="Bienvenido al sistema de simulación" textAlignment="JUSTIFY" wrapText="true" />
                <Label layoutX="10.0" layoutY="10.0" styleClass="h2" text="Este simulador permite visualizar las recompensas y multas generadas por una cámara de control de velocidad." textAlignment="JUSTIFY" wrapText="true" />
                <Label layoutX="10.0" layoutY="104.0" styleClass="h3" text="Seleccione una acción para continuar." textAlignment="JUSTIFY" wrapText="true">
                    <graphic>
                        <FontIcon iconLiteral="far-arrow-alt-circle-left" />
                    </graphic>
                </Label>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
    </padding>
</VBox>
