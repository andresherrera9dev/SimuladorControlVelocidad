<VBox maxWidth="600.0" prefHeight="575.0" prefWidth="650.0" stylesheets="@../css/stylesheet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ITCelaya.simuladorcontrolvelocidad.controllers.simulationController">
    <children>
      <HBox>
         <children>
            <StackPane>
               <children>
                  <Circle fill="#ff1f1f" radius="90.0" stroke="BLACK" strokeType="INSIDE" />
