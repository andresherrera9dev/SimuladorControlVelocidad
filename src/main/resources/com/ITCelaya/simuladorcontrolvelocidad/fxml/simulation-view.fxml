                  <Label styleClass="h1" text="60 Km/h" />
               </children>
            </StackPane>
            <VBox alignment="TOP_RIGHT" spacing="16.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="TOP_RIGHT" spacing="16.0" styleClass="h2">
                     <children>
                            <Label styleClass="data" text="Placa:" textAlignment="JUSTIFY" wrapText="true" />
                        <StackPane alignment="TOP_LEFT">
                           <children>
                              <Label styleClass="data" text="                " textAlignment="JUSTIFY" underline="true" wrapText="true" />
                              <Label fx:id="plateLbl" layoutX="10.0" layoutY="10.0" styleClass="data" text="1234534" textAlignment="JUSTIFY" textFill="#6aa34a" wrapText="true" />
