                           <children>
                              <Label styleClass="data" text="                " textAlignment="JUSTIFY" underline="true" wrapText="true" />
                              <Label fx:id="velocityLbl" layoutX="10.0" layoutY="10.0" styleClass="data" text="44 Km/h" textAlignment="JUSTIFY" textFill="#6aa34a" wrapText="true" />
                           </children>
                        </StackPane>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="pointsLbl" styleClass="points" text="+100" textAlignment="JUSTIFY" wrapText="true" />
            <HBox alignment="BOTTOM_RIGHT" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView fx:id="carImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/car.png" />
